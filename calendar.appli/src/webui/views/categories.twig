{% extends 'base.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block content %}
<h2 class="text-primary-color">Bienvenue sur La Chaudière Agenda</h2>
<p>Consultez les événements culturels à venir, gérez-les facilement via l'administration.</p>

<div class="categories-section mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-secondary-color">Catégories d'événements</h3>
        <a href="{{ createCategoryUrl }}" class="btn btn-primary-custom">
            <i class="fas fa-plus"></i> Créer une catégorie
        </a>
    </div>
    
    {% if categories is defined and categories|length > 0 %}
        <div class="row">
            {% for category in categories %}
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-primary-color">{{ category.label }}</h5>
                            {% if category.description %}
                                <p class="card-text">{{ category.description }}</p>
                            {% else %}
                                <p class="card-text text-muted">Aucune description</p>
                            {% endif %}
                            <a href="/events?category_id={{ category.id }}" class="btn btn-secondary-custom">Voir les événements</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert bg-primary-color text-white">
            <p>Aucune catégorie n'est disponible actuellement.</p>
        </div>
    {% endif %}
</div>
{% endblock %}
