{% extends 'base.twig' %}

{% block title %}Nouvelle Catégorie - La Chaudière{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1 class="text-primary-color">Créer une nouvelle catégorie</h1>
    
    {% if error is defined %}
    <div class="alert bg-primary-color text-white">
        {{ error }}
    </div>
    {% endif %}
    
    <form method="POST" action="{{ url_for('create_category_post') }}">
        
        <div class="mb-3">
            <label for="label" class="form-label text-secondary-color">Libellé *</label>
            <input type="text" class="form-control" id="label" name="label" required
                value="{{ formData.label ?? '' }}">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label text-secondary-color">Description (format Markdown)</label>
            <textarea class="form-control" id="description" name="description" rows="5">{{ formData.description ?? '' }}</textarea>
            <div class="form-text">Utilisez la syntaxe Markdown pour mettre en forme votre description.</div>
        </div>

        <input type="hidden" name="csrf" value="{{ csrf_token }}">
        
        <div class="d-flex justify-content-between">
            <a href="{{ url_for('categories', {'route': ''}) }}" class="btn btn-secondary-custom">Annuler</a>
            <button type="submit" class="btn btn-primary-custom">Créer la catégorie</button>
        </div>
    </form>
</div>
{% endblock %}
