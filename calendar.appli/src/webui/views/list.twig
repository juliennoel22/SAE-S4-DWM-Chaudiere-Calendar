{% extends 'base.twig' %}

{% block title %}
<h2 class="mb-4 d-flex justify-content-between align-items-center">
    <span>Liste des événements</span>
    <a href="/events/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Créer un événement
    </a>
</h2>
{% endblock %}
{% block content %}
<h2 class="mb-4 d-flex justify-content-between align-items-center">
    <span>Liste des événements</span>
    <a href="/events/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Créer un événement
    </a>
</h2>
<form method="get" action="" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-auto">
            <label for="category_id" class="form-label mb-0">Filtrer par catégorie :</label>
        </div>
        <div class="col-auto">
            <select name="category_id" id="category_id" class="form-select" onchange="this.form.submit()">
                <option value="">Toutes</option>
                {% for cat in categories %}
                    <option value="{{ cat.id }}" {% if selectedCategory == cat.id %}selected{% endif %}>{{ cat.label }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Catégorie</th>
            <th>Date(s)</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.title }}</td>
                <td>
                    {% if event.category is defined and event.category %}
                        {{ event.category.label }}
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {{ event.date_start|date('d/m/Y') }}
                    {% if event.date_end %}
                        - {{ event.date_end|date('d/m/Y') }}
                    {% endif %}
                </td>
                <td>
                    {% if event.published %}
                        <span class="badge bg-success">Publié</span>
                    {% else %}
                        <span class="badge bg-secondary">Non publié</span>
                    {% endif %}
                </td>
                <td>
                    <form method="post" action="/events/{{ event.id }}/toggle-publish" style="display:inline;">
                        <button type="submit" class="btn btn-sm {% if event.published %}btn-warning{% else %}btn-success{% endif %}">
                            {% if event.published %}Dépublier{% else %}Publier{% endif %}
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted">Aucun événement trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>
{% endblock %}