{% extends "base.twig" %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <h1 style="color: var(--primary-color); text-align: center;">Bienvenue !</h1>
    <p style="color: var(--light-text); text-align: center;">Veuillez vous connecter pour accéder à votre compte.</p>

    {% if error %}
        <p style="color: red; text-align: center;">{{ error }}</p>
    {% endif %}

    <form action="{{ url_for('signin_post') }}" method="POST" style="max-width: 400px; margin: 0 auto; padding: 16px; background-color: var(--card-background); border: 1px solid var(--border-color); border-radius: 8px; box-shadow: var(--shadow);">
        <label for="email" style="display: block; margin-bottom: 8px; color: var(--text-color);">Adresse e-mail</label>
        <input type="email" id="email" name="email" required style="width: 100%; padding: 8px; margin-bottom: 16px; border: 1px solid var(--border-color); border-radius: 4px;">

        <label for="password" style="display: block; margin-bottom: 8px; color: var(--text-color);">Mot de passe</label>
        <input type="password" id="password" name="password" required style="width: 100%; padding: 8px; margin-bottom: 16px; border: 1px solid var(--border-color); border-radius: 4px;">

        <input type="hidden" name="csrf" value="{{ csrf_token }}">

        <button type="submit" class="btn-primary-custom" style="width: 100%;">Connexion</button>
    </form>
{% endblock %}