<h2>Créer un événement</h2>
<form method="post" action="">
    <label for="title">Titre :</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description_md">Description (Markdown) :</label>
    <textarea id="description_md" name="description_md" required></textarea><br>

    <label for="price">Prix :</label>
    <input type="text" id="price" name="price"><br>

    <label for="date_start">Date début :</label>
    <input type="date" id="date_start" name="date_start" required><br>

    <label for="date_end">Date fin :</label>
    <input type="date" id="date_end" name="date_end"><br>

    <label for="time">Heure :</label>
    <input type="time" id="time" name="time"><br>

    <label for="category_id">Catégorie :</label>
    <select id="category_id" name="category_id" required>
        {% for cat in categories %}
            <option value="{{ cat.id }}">{{ cat.label }}</option>
        {% endfor %}
    </select><br>

    <label for="published">Publié :</label>
    <input type="checkbox" id="published" name="published" value="1"><br>

    <button type="submit">Créer l'événement</button>
</form>